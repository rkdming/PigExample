<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 날짜"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="YYYY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="/"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="MM"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="/"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="DD"/>


    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기간"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_sYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="YYYY"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="/"/>
        <TextView
            android:id="@+id/home_sMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="MM"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="/"/>
        <TextView
            android:id="@+id/home_sDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="DD"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="  ~  "/>

        <TextView
            android:id="@+id/home_fYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="YYYY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="/"/>
        <TextView
            android:id="@+id/home_fMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="MM"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="/"/>
        <TextView
            android:id="@+id/home_fDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="DD"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/pigZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/pigHi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="돼지의 한 마디\n예를 든다면\n좋은 하루 보내!"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/pig"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/menu"/>





</LinearLayout>